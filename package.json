{
  "name": "zettelkasten",
  "version": "1.0.0",
  "description": "A zettelkasten for @dnnsmnstrr",
  "main": "index.js",
  "author": "Dennis Muensterer <dennismuensterer@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "docker run --rm -i -p 8080:8080 -v ~/zettelkasten/notes:/zettelkasten sridca/neuron neuron rib -ws 0.0.0.0:8080",
    "live": "reload -b -d ~/zettelkasten/notes/.neuron/output",
    "dendron": "npx dendron buildSite --stage dev --serve",
    "build": "npx dendron-cli buildSite --wsRoot . --stage prod ",
    "new": "cd notes && yo zettel"
  },
  "dependencies": {
    "@dendronhq/dendron-11ty": "^1.57.2",
    "@dendronhq/dendron-cli": "^0.57.2",
    "generator-zettel": "^0.1.3"
  }
}
